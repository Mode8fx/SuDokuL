OBJ_DIR = ./build_linux
EXE=sudokul

SRC_DIR     = src
EXCLUDED    = 
SRCS = $(filter-out $(EXCLUDED), \
	$(wildcard $(SRC_DIR)/*.cpp) \
	$(wildcard $(SRC_DIR)/fonts_include/*.cpp) \
	$(wildcard $(SRC_DIR)/graphics_include/all_res/*.cpp) \
	$(wildcard $(SRC_DIR)/graphics_include/normal_res/*.cpp) \
	$(wildcard $(SRC_DIR)/graphics_include/low_res/*.cpp) \
	$(wildcard $(SRC_DIR)/music_include/*.cpp) \
	$(wildcard $(SRC_DIR)/sfx_include/*.cpp) \
)
OBJS        = $(addprefix $(OBJ_DIR)/, $(SRCS:.cpp=.o))


CXX ?= g++
SDLCONFIG ?= sdl-config
CXXFLAGS ?= -Os -Wall -Wextra -DLINUX -DPC -DMOUSE_INPUT -DSDL1
LDFLAGS ?= -lSDL_image -lSDL_ttf -lSDL_mixer -lstdc++ -lmikmod

CXXFLAGS += `$(SDLCONFIG) --cflags`
LDFLAGS += `$(SDLCONFIG) --libs`

.PHONY: all clean

all: $(EXE)

$(EXE): $(OBJS)
	$(CXX) $(CXXFLAGS) $(TARGET_ARCH) $^ $(LDFLAGS) -o $@

$(OBJ_DIR)/%.o: %.cpp
	mkdir -p $(@D)
	$(CXX) $(CXXFLAGS) -c $< -o $@

$(OBJ_DIR):
	mkdir -p $@

clean:
	$(RM) -rv *~ $(OBJS) $(EXE)