PSP_LARGE_MEMORY=1

TARGET		=	sudokul
BUILD		=	build_psp
SRC_DIR		=	src
EXCLUDED	=	src/graphics_include_logo_480.h src/graphics_include_logo_544.h src/graphics_include_logo_720.h src/graphics_include_logo_1080.h src/graphics_include_logo_1440.h src/graphics_include_logo_2160.h
SRCS = $(filter-out $(EXCLUDED), \
	$(wildcard $(SRC_DIR)/*.cpp) \
	$(wildcard $(SRC_DIR)/fonts_include/*.cpp) \
	$(wildcard $(SRC_DIR)/graphics_include/all_res/*.cpp) \
	$(wildcard $(SRC_DIR)/graphics_include/normal_res/*.cpp) \
	$(wildcard $(SRC_DIR)/music_include/*.cpp) \
	$(wildcard $(SRC_DIR)/sfx_include/*.cpp) \
)
OBJS		=	$(patsubst %.cpp, %.o, $(patsubst %.c, %.o, $(SRCS)))

INCDIR =
CFLAGS = -G0 -O2 -DPSP -DCONSOLE
CXXFLAGS = $(CFLAGS) -fno-exceptions -fno-rtti -fpermissive
ASFLAGS = $(CFLAGS)

LIBDIR =
LDFLAGS =
LIBS = -lSDL2main -lSDL2_image -lpng -ljpeg -lSDL2_mixer -lstdc++ -lSDL2_ttf -lSDL2 -lGL -lGLU -lglut -lfreetype -lz -lvorbis -lvorbisfile -lpspvfpu -lpsphprm -lpspsdk -lpspctrl -lpspumd -lpsprtc -lpsppower -lpspgum -lpspgu -lpspaudiolib -lpspaudio -lm -lpspvram -lxmp -logg -lzip -lbz2 -lharfbuzz -lmodplug

# -lpsphttp -lpspssl -lpspwlan -lpspnet_adhocmatching -lpspnet_adhoc -lpspnet_adhocctl

EXTRA_TARGETS = EBOOT.PBP
PSP_EBOOT_TITLE = sudokul
PSP_EBOOT_ICON = psp/icon.png
PSP_EBOOT_PIC1 = psp/pic.png
# psp sound file: PSP_EBOOT_SND0=SND0.at3

PSPSDK=$(shell psp-config --pspsdk-path)
include $(PSPSDK)/lib/build.mak
